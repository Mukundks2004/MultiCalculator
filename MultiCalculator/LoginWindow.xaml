<Window x:Class="MultiCalculator.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiCalculator"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="idTextBlock" HorizontalAlignment="Left" Margin="309,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="266"/>
        <Label x:Name="id" Content="ID:" HorizontalAlignment="Left" Margin="267,105,0,0" VerticalAlignment="Top" Width="30" RenderTransformOrigin="1.054,0.577"/>
        <Label x:Name="password" Content="Password:" HorizontalAlignment="Left" Margin="235,146,0,0" VerticalAlignment="Top"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="28" Width="340" Click="VerifyAndOpenWindow_Click"/>
        <Label Content="Login Menu" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top"/>
        <Label x:Name="failureMessageLabel" Content="" HorizontalAlignment="Center" Margin="0,282,0,0" VerticalAlignment="Top" Width="216"/>
        <PasswordBox x:Name="passwordTextBlock" HorizontalAlignment="Left" Margin="309,150,0,0" VerticalAlignment="Top" Width="266"/>
    </Grid>
</Window>
