<Window x:Class="MultiCalculator.PracticeProblemsWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiCalculator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PracticeProblems">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Title"
                   Text="Random Question Generator"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="10"
                   Grid.Row="0"/>

        <TextBlock x:Name="QuestionTextBlock"
                   Text="Here will be the generated question"
                   FontSize="18"
                   Margin="10"
                   HorizontalAlignment="Center"
                   Grid.Row="1"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="480"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Click for Question"
                    Grid.Column="0"
                    Margin="5"
                    Padding="10,5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.ColumnSpan="2" Click="Button_Click"/>

            <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="5">
                <TextBlock Text="Send to email:"
                           VerticalAlignment="Center"
                           Margin="5"/>

                <TextBox x:Name="EmailTextBox"
                         Width="200"
                         Margin="5" TextChanged="EmailTextBox_TextChanged"/>
            </StackPanel>
        </Grid>
    </Grid>

</Window>
