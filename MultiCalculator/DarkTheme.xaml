<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="WindowBackgroundColor">#333333</Color>
    <Color x:Key="ControlBackgroundColor">#444444</Color>
    <Color x:Key="TextColor">#FFFFFF</Color>
    <Color x:Key="SeparatorColor">#555555</Color>
    <Color x:Key="ButtonBackgroundColor">#666666</Color>
    <Color x:Key="ButtonForegroundColor">#FFFFFF</Color>

    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundColor}" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextColor}" />
    </Style>

    <Style TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource SeparatorColor}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundColor}" />
        <Setter Property="Foreground" Value="{StaticResource ButtonForegroundColor}" />
        <Setter Property="BorderBrush" Value="{StaticResource ButtonBackgroundColor}" />
    </Style>
</ResourceDictionary>